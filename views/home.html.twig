<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css">
        <link href="/css/styles.css" rel="stylesheet" type="text/css">
        <script src="/js/jquery-3.1.0.min.js" type="text/javascript"></script>
        <script src="/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="/js/scripts.js" type="text/javascript"></script>
        <title>Worse Yelp!</title>
    </head>
    <body>
        <div class="container">
            <h1>Restaurant Cuisine Matcher</h1>

            <h2>Add A Cuisine Type!</h2>
            <form action='/add_cuisine' method='post'>
                <label for='cuisine_name'>Cuisine name</label>
                <input id='cuisine_name' name='cuisine_name' type='text'>

                <button type='submit'>Add cuisine</button>
            </form>
            <hr />

            <h2>Add A Restaurant To Our List!</h2>
            <form class="form-group form-group-lg form-inline" action='/add_restaurant' method='post'>
                <div class="form-group form-group-lg">
                    <label for='restaurant_name'>Restaurant name</label>
                    <input id='restaurant_name' name='restaurant_name' type='text'>
                        <div class="form-group form-group-lg">
                            What Cuisine Type is Featured Here?
                            <select name="cuisine_id">
                                {% for cuisine in cuisines %}
                                    <option value= {{ cuisine.getId }}>{{ cuisine.getName }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group form-group-lg">
                            <select name="cost">
                                <option value=1>💲</option>
                                <option value=2>💲💲</option>
                                <option value=3>💲💲💲</option>
                                <option value=4>💲💲💲💲</option>
                                <option value=5>💲💲💲💲💲</option>
                            </select>
                        </div>
                        <div class="form-group form-group-lg">
                            <select name="rating">
                                <option value=1>🌟</option>
                                <option value=2>🌟🌟</option>
                                <option value=3>🌟🌟🌟</option>
                                <option value=4>🌟🌟🌟🌟</option>
                                <option value=5>🌟🌟🌟🌟🌟</option>
                            </select>
                        </div>
                    <button type='submit'>Add restaurant</button>
                </div>
            </form>
            <hr />
            <div class="row">
                <div class="col-sm-4">
                    <h3>Cuisine Types</h3>
                    <hr>
                    <ul>
                    {% for cuisine in cuisines %}
                        <li>
                        <!-- Button trigger modal -->
                        <a href='#{{ cuisine.getId }}' data-toggle="modal">✏️  </a>
                        <a href="/filter_by_cuisine/{{ cuisine.getName }}" class='left-space'>{{ cuisine.getName }}</a>
                        <!-- Modal -->
                        <div class="modal fade" id="{{ cuisine.getId }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                                    </div>
                                    <div class="modal-body">
                                        <form class='form-inline' method=>
                                            <div class='form-group form-horizontal'>
                                                <input class='form form-control' type='text' placeholder='update cuisine name'>
                                                <button class='btn btn-warning btn-sm' type='submit'>Submit Changes</button>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <form action="/edit_cuisine/{{ cuisine.getId }}" method="post">
                                            <input name="_method" type="hidden" value="delete">
                                            <button type="submit" class='btn btn-danger btn-sm pull-left'>Delete Cuisine Type</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        </li><hr />
                    {% endfor %}
                    </ul>
                </div>
                <div class="col-sm-4">
                    <h3>Restaurants</h3>
                    <hr>
                    <ul>
                    {% for restaurant in restaurants %}
                        <li><a href="/edit_restaurant/{{ restaurant.getId }}">{{ restaurant.getName }}</a></li><hr />
                    {% endfor %}
                    </ul>
                </div>
                <div class="col-sm-2">
                    <h3>💲💲💲💲💲</h3>
                    <hr>
                    <ul>
                    {% for restaurant in restaurants %}
                        <li>
                            {% for i in 1.. restaurant.getCost %}
                            💲
                            {% endfor %}
                        </li><hr />
                    {% endfor %}
                    </ul>
                </div>
                <div class="col-sm-2">
                    <h3>🌟🌟🌟🌟🌟</h3>
                    <hr>
                    <ul>
                    {% for restaurant in restaurants %}
                        <li>
                            {% for i in 1.. restaurant.getRating %}
                            🌟
                            {% endfor %}
                        </li><hr />
                    {% endfor %}
                    </ul>
                </div>
            </div>

        </div>
    </body>
</html>
